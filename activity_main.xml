<?xml version="1.0" encoding="utf-8"?>

<TableLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="100"
    >

    <TableRow
        android:weightSum="10"
        android:layout_weight="20"
        >
        <EditText
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="34sp"
            android:hint="0"
            android:layout_weight="10"
            />

    </TableRow>
    <TableRow
        android:weightSum="100"
        android:layout_weight="16"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="C"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:text="()"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="%"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="/"
            android:layout_weight="25"
            />
    </TableRow>
    <TableRow
        android:weightSum="100"
        android:layout_weight="16"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="7"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="8"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="9"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="*"
            android:layout_weight="25"
            />
    </TableRow>
    <TableRow
        android:weightSum="100"
        android:layout_weight="16"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="4"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="5"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="6"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="-"
            android:layout_weight="25"
            />
    </TableRow>
    <TableRow
        android:weightSum="100"
        android:layout_weight="16"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="1"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="2"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="3"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="+"
            android:layout_weight="25"
            />
    </TableRow>
    <TableRow
        android:weightSum="100"
        android:layout_weight="16"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="0"
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="."
            android:layout_weight="25"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:text="="
            android:layout_weight="25"
            />
    </TableRow>
</TableLayout>
